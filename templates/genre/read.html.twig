{% extends 'base.html.twig' %}

{% block title %}LNC | {{ genre.name }}{% endblock %}

{% block active_genre %}active{% endblock %}

{% block body %}
	<main>
		<section class="container">
			<h1>{{ genre.name }}</h1>

			{{ include('_flash_messages.html.twig') }}

            <a class="btn btn-item btn-secondary" href="{{ path('admin_genre_browse') }}">Liste des genres</a>

            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Artistes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                        {% for artist in genre.artists %}
                            {% if artist.lastname is not empty %}
                                <a href="{{ path('admin_artist_read', { slug : artist.slug }) }}">{{ artist.firstname }} {{ artist.lastname }}</a>{{ loop.last ? '' : ', ' }}
                            {% else %}
                                <a href="{{ path('admin_artist_read', { slug : artist.slug }) }}">{{ artist.firstname }}</a>{{ loop.last ? '' : ', ' }}
                            {% endif %}
                        {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
		</section>
	</main>
{% endblock %}
