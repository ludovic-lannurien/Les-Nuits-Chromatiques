{% extends 'base.html.twig' %}

{% block title %}LNC | {{ genre.name }}{% endblock %}

{% block active_genre %}active{% endblock %}

{% block body %}
	<main>
		<section class="container">
			<h1>{{ genre.name }}</h1>

            <a class="btn btn-item btn-primary" href="{{ path('admin_genre_browse') }}">Liste des genres</a>

			<table class="table table-striped table-light">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom du genre artistique</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">{{ genre.id }}</th>
						<td>{{ genre.name }}</td>
					</tr>
				</tbody>
			</table>
		</section>
	</main>
{% endblock %}
