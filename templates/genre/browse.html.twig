{% extends 'base.html.twig' %}

{% block title %}LNC | Liste des genres{% endblock %}

{% block active_genre %}active{% endblock %}

{% block body %}
	<main>
		<section class="container list">
			<h1>Liste des genres</h1>

			{{ include('_flash_messages.html.twig') }}

            <a class="btn btn-item btn-secondary" href="{{ path('admin_genre_add') }}">Ajouter un genre</a>

			<table class="table table-striped table-dark">
				<thead>
					<tr>
                        <th scope="col">#</th>
						<th scope="col">Nom</th>
						<th scope="col">Afficher</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for genre in genres %}
						<tr>
                            <th scope="row">{{ genre.id }}</th>
							<td>{{ genre.name }}</td>
							<td><a class="btn btn-primary" href="{{ path('admin_genre_read', { slug: genre.slug }) }}"><i class="fas fa-eye"></i></a></td>
                            <td><a class="btn btn-success" href="{{ path('admin_genre_edit', { slug: genre.slug }) }}"><i class="fas fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="{{ path('admin_genre_delete', { slug: genre.slug }) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer le genre {{ genre.name }} ?')"><i class="fas fa-trash-alt"></i></a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</section>
	</main>
{% endblock %}
