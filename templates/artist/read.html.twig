{% extends "base.html.twig" %}

{% block title %}LNC | {{ artist.firstname }} {{artist.lastname}}{% endblock %}

{% block active_artist %}active{% endblock %}

{% block body %}
	<main>
		<section class="container artist">
			<h1>{{ artist.firstname }} {{ artist.lastname }}</h1>

            <a class="btn btn-item btn-primary" href="{{ path('admin_artist_browse') }}">Liste des artistes</a>

			<table class="table table-striped table-light">
				<thead>
					<tr>
						<th scope="col">Genre(s) artistique(s)</th>
						<th scope="col">Lien vid√©o</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
						{% for genre in artist.genres %}
							{{ genre.name }}{{ loop.last ? '' : ', ' }}
						{% endfor %}
						</td>
						<td>{{ artist.videoLink }}</td>
					</tr>
				</tbody>
			</table>

            <table class="table table-striped table-light description">
				<thead>
					<tr>
						<th scope="col">Description</th>
					</tr>
				</thead>
				<tbody>
					<tr>
                        <td>{{ artist.description }}</td>
					</tr>
				</tbody>
			</table>

            <p><img src="{{ artist.picture }}" alt="Image de l'artiste"></p>
		</section>
	</main>
{% endblock %}