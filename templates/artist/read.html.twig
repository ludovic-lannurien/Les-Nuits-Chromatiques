{% extends "base.html.twig" %}

{% block title %}LNC | {{ artist.firstname }} {{artist.lastname}}{% endblock %}

{% block active_artist %}active{% endblock %}

{% block body %}
	<main>
		<section class="container">
			<h1>{{ artist.firstname }} {{ artist.lastname }}</h1>

			{{ include('_flash_messages.html.twig') }}

            <a class="btn btn-item btn-primary" href="{{ path('admin_artist_browse') }}">Liste des artistes</a>

			<div class="artist">
				<table class="table table-striped table-dark">
					<thead>
						<tr>
							<th scope="col">Genre(s) artistique(s)</th>
							<th scope="col">Évènement(s)</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								{% for genre in artist.genres %}
									<a href="{{ path('admin_genre_read', { slug : genre.slug }) }}">{{ genre.name }}{{ loop.last ? '' : ', ' }}</a>
								{% endfor %}
							</td>
							<td>
								{% for event in artist.events %}
									<a href="{{ path('admin_event_read', { slug : event.slug }) }}">{{ event.name }}</a>{{ loop.last ? '' : ', ' }}
								{% endfor %}
							</td>
						</tr>
					</tbody>
				</table>

				<div>
					<img src="{{ artist.picture }}" alt="Image de l'artiste">

					<table class="table table-striped table-dark description">
						<thead>
							<tr>
								<th scope="col">Description</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>{{ artist.description }}</td>
							</tr>
						</tbody>
					</table>
				</div>

				<table class="table table-striped table-dark video-link">
					<thead>
						<tr>
							<th scope="col">Lien vidéo</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>{{ artist.videoLink }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</section>
	</main>
{% endblock %}