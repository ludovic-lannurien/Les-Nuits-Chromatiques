{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block active_artist %}active{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>firstname</th>
                <th>lastname</th>
                <th>picture</th>
                <th>description</th>
                <th>video_link</th>
                <th>type</th>

            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.firstname }}</td>
                <td>{{ artist.lastname }}</td>
                <td><img src="{{ artist.picture }}" width="100" alt="Image de l'artiste"></td>
                <td>{{ artist.description }}</td>
                <td>{{ artist.videoLink }}</td>
                <td>{{ artist.type }}</td>
                <td>
                    <a href="{{ path('admin_artist_read', {slug: artist.slug}) }}"><i class="far fa-eye text-info fa-2x"></i></a>
                    <a href="{{ path('admin_artist_edit', {slug: artist.slug}) }}"><i class="far fa-edit text-warning fa-2x"></i></i></a>
                    <a href="{{ path('admin_artist_delete', {slug: artist.slug}) }}"onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer cet artiste ?')"><i class="far fa-trash-alt text-danger fa-2x"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_artist_add') }}">Create new</a>
{% endblock %}