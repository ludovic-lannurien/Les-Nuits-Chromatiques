{% extends 'base.html.twig' %}

{% block title %}LNC | {{ event.name }}{% endblock %}

{% block active_event %}active{% endblock %}

{% block body %}
	<main>
		<section class="container">
			<h1>{{ event.name }}</h1>

            <a class="btn btn-item btn-primary" href="{{ path('admin_event_browse') }}">Liste des évènements</a>

			<table class="table table-striped table-light">
				<thead>
					<tr>
						<th scope="col">Lieu</th>
						<th scope="col">Date de début</th>
						<th scope="col">Date de fin</th>
						<th scope="col">Artiste(s)</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{ event.place.name }}</td>
						<td>{{ event.startDatetime|date('d/m/Y à H:i') }}</td>
						<td>{{ event.endDatetime|date('d/m/Y à H:i') }}</td>
						<td>
						{% for artist in event.artists %}
							{% if artist.lastname is not empty %}
								{{ artist.firstname }} {{ artist.lastname }}{{ loop.last ? '' : ', ' }}
							{% else %}
								{{ artist.firstname }}{{ loop.last ? '' : ', ' }}
							{% endif %}
						{% endfor %}
						</td>
					</tr>
				</tbody>
			</table>

            <table class="table table-striped table-light description">
				<thead>
					<tr>
						<th scope="col">Description</th>
					</tr>
				</thead>
				<tbody>
					<tr>
                        <td>{{ event.description }}</td>
					</tr>
				</tbody>
			</table>
		</section>
	</main>
{% endblock %}
