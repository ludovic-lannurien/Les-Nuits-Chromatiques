{% extends 'base.html.twig' %}

{% block title %}LNC | {{ place.name }}{% endblock %}

{% block active_place %}active{% endblock %}

{% block body %}
	<main>
		<section class="container place">
			<h1>{{ place.name }}</h1>

            <a class="btn btn-item btn-primary" href="{{ path('admin_place_browse') }}">Liste des lieux</a>

			<table class="table table-striped table-light">
				<thead>
					<tr>
						<th scope="col">Adresse</th>
						<th scope="col">Code postal</th>
						<th scope="col">Ville</th>
                        <th scope="col">Latitude</th>
                        <th scope="col">Longitude</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{ place.address }}</td>
						<td>{{ place.zipCode }}</td>
						<td>{{ place.city }}</td>
                        <td>{{ place.latitude }}</td>
                        <td>{{ place.longitude }}</td>
					</tr>
				</tbody>
			</table>

            <table class="table table-striped table-light description">
				<thead>
					<tr>
						<th scope="col">Description</th>
					</tr>
				</thead>
				<tbody>
					<tr>
                        <td>{{ place.description }}</td>
					</tr>
				</tbody>
			</table>

            <p><img src="{{ place.picture }}" alt="Image du lieu"></p>
		</section>
	</main>
{% endblock %}
