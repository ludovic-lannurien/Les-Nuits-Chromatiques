{% extends 'base.html.twig' %}

{% block title %}LNC | Liste des lieux{% endblock %}

{% block active_place %}active{% endblock %}

{% block body %}
	<main>
		<section class="container list">
			<h1>Liste des lieux</h1>

			{{ include('_flash_messages.html.twig') }}

            <a class="btn btn-item btn-secondary" href="{{ path('admin_place_add') }}">Ajouter un lieu</a>

			<table class="table table-striped table-dark">
				<thead>
					<tr>
                        <th scope="col">Image</th>
						<th scope="col">Lieu</th>
                        <th scope="col">Afficher</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for place in places %}
						<tr>
                            <td><img src="{{ place.picture }}" alt="Image du lieu"></td>
							<td>{{ place.name }}</td>
                            <td><a class="btn btn-primary" href="{{ path('admin_place_read', { slug: place.slug }) }}"><i class="fas fa-eye"></i></a></td>
                            <td><a class="btn btn-success" href="{{ path('admin_place_edit', { slug: place.slug }) }}"><i class="fas fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="{{ path('admin_place_delete', { slug: place.slug }) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ place.name }} ?')"><i class="fas fa-trash-alt"></i></a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</section>
	</main>
{% endblock %}
